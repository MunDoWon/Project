@model LastPatient.Controllers.VisitPatients

@{
    ViewData["Title"] = "Crt";
}
<link rel="stylesheet" type="text/css" href="~/css/Create.css">

<h4 id="MainTitle">면회신청</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Crt">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <div class="form-group">
                <label asp-for="Id" class="control-label">아이디</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitName" class="control-label">방문자 이름</label>
                <input asp-for="VisitName" class="form-control" />
                <span asp-validation-for="VisitName" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="VisitHp" class="control-label">방문자 전화번호</label>
                <input asp-for="VisitHp" class="form-control" />
                <span asp-validation-for="VisitHp" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="VisitPatient" class="control-label">환자이름</label>
                <input asp-for="VisitPatient" class="form-control" />
                <span asp-validation-for="VisitPatient" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitOX" class="control-label">방문사유</label>
                <input asp-for="VisitOX" class="form-control" />
                <span asp-validation-for="VisitOX" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="면회신청" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Admission"> 뒤로가기</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

