@model LastPatient.Controllers.Patient

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" type="text/css" href="~/css/Create.css">

<div class="container text-center">
    <div class="row">
        <h1 id="MainTitle">환자</h1>
        <hr />
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">아이디</label>
                    <input asp-for="Id" class="form-control" id="autoIncrementId" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>


                @* ---------------------------이름---------------------------- *@
                <div class="form-group">
                    <label asp-for="Name" class="control-label">성함</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                @* ---------------------------증상---------------------------- *@
                <div class="form-group">
                    <label asp-for="Symptom" class="control-label">증상</label>
                    <div class="row">
                        <div class="col-md-4">
                            <label><input type="radio" asp-for="Symptom" id="radio1" value="복통" /> 복통</label>
                        </div>
                        <div class="col-md-4">
                            <label><input type="radio" asp-for="Symptom" id="radio2" value="두통" /> 두통</label>
                        </div>
                        <div class="col-md-4">
                            <label><input type="radio" asp-for="Symptom" id="radio3" value="고열" /> 고열</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label><input type="radio" asp-for="Symptom" id="radio4" value="골절" /> 골절</label>
                        </div>
                        <div class="col-md-4">
                            <label><input type="radio" asp-for="Symptom" id="radio5" value="염좌" /> 염좌</label>
                        </div>
                        <div class="col-md-4">
                            <label><input type="radio" asp-for="Symptom" id="radio6" value="관절통" /> 관절통</label>
                        </div>
                    </div>
                    <span asp-validation-for="Symptom" class="text-danger"></span>
                </div>
                <script src="~/js/Radio.js"></script>
                @* ---------------------------할인---------------------------- *@
                <div class="form-group">
                    <label asp-for="Discounts" class="control-label">할인 유형</label>
                    <select asp-for="Discounts" class="form-control">
                        <option value="없음">없음</option>
                        <option value="어린이">어린이</option>
                        <option value="노약자">노약자</option>
                        <option value="국가유공자">국가유공자</option>
                    </select>
                    <span asp-validation-for="Discounts" class="text-danger"></span>
                </div>
                @* ---------------------------날짜---------------------------- *@
                <div class="form-group">
                    <label asp-for="Date" class="control-label">날짜</label>
                    <input asp-for="Date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" readonly />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                @* ---------------------------버튼---------------------------- *@
                <div class="form-group">
                    <input id="incrementButton" type="submit" value="접수하기" class="btn btn-primary" />
                    <a class="btn btn-primary" id="btn_back" asp-action="Index">돌아가기</a>
                </div>
            </form>

        </div>
    </div>
</div>
<script>
    var incrementButton = document.getElementById("incrementButton");
    var autoIncrementIdInput = document.getElementById("autoIncrementId");

    // 버튼을 클릭할 때 아이디를 1씩 증가시키는 함수
    incrementButton.addEventListener("click", function () {
        currentId++; // 현재 아이디 값을 1 증가시킵니다.
        autoIncrementIdInput.value = currentId; // 입력 필드에 새로운 아이디 값을 설정합니다.
    });
</script>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}