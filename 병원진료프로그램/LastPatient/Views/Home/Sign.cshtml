@model LastPatient.Controllers.User

@{
    ViewData["Title"] = "Sign";
}
<link rel="stylesheet" type="text/css" href="~/css/Create.css">



<div class="row">
    <h4>회원가입</h4>
    <hr />
    <div class="col-md-4">
        <form asp-action="Sign">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label">회원번호</label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AccountId" class="control-label">아이디</label>
                <input asp-for="AccountId" class="form-control" />
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AccountPassword" class="control-label">비밀번호</label>
                <input type="password" asp-for="AccountPassword" class="form-control" />
                <span asp-validation-for="AccountPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Name" class="control-label">이름</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="회원가입" class="btn btn-primary" />
                <a asp-action="Main" type="submit" value="처음으로" class="btn btn-primary">처음으로</a>
            </div>
        </form>
    </div>
</div>
<br />